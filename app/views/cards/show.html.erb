<h1>
  <%= @card.title %>
  <a href="#" class="like_btn" data-card-id="<%= @card.id %>">
    <% if @card.favorited_by?(current_user) %>
      <i class="fas fa-thumbs-up"></i>
    <% else %>
      <i class="far fa-thumbs-up"></i>
    <% end %>
  </a>
</h1>
<p>
  <%= @card.content %>
</p>
<hr>
<%= form_with(model: @comment, url: card_comments_path(@card)) do |f| %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>

<ul class="comments">
  <%= render @comments %>
</ul>